<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>web01</display-name>
  
  <filter>
  	<filter-name>CharSetFilter</filter-name>
  	<filter-class>bit.java39.filters.CharSetFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CharSetFilter</filter-name>
  	<url-pattern>*</url-pattern>
  </filter-mapping>
  
  <listener>
  	<listener-class>bit.java39.listeners.ContextLoaderListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>EmployeeList</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeList</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeAdd</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeAdd</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeDetail</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeDetail</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeUpdate</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeUpdate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeDelete</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeDelete</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DepartmentList</servlet-name>
    <servlet-class>bit.java39.servlets.hr.DepartmentList</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DepartmentAdd</servlet-name>
    <servlet-class>bit.java39.servlets.hr.DepartmentAdd</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DepartmentDetail</servlet-name>
    <servlet-class>bit.java39.servlets.hr.DepartmentDetail</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DepartmentUpdate</servlet-name>
    <servlet-class>bit.java39.servlets.hr.DepartmentUpdate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DepartmentDelete</servlet-name>
    <servlet-class>bit.java39.servlets.hr.DepartmentDelete</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>EmployeeList</servlet-name>
    <url-pattern>/hr/searchEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeAdd</servlet-name>
    <url-pattern>/hr/addEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeDetail</servlet-name>
    <url-pattern>/hr/retrieveEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeUpdate</servlet-name>
    <url-pattern>/hr/updateEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeDelete</servlet-name>
    <url-pattern>/hr/deleteEmp</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DepartmentList</servlet-name>
    <url-pattern>/hr/searchDept</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepartmentAdd</servlet-name>
    <url-pattern>/hr/addDept</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepartmentDetail</servlet-name>
    <url-pattern>/hr/retrieveDept</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepartmentUpdate</servlet-name>
    <url-pattern>/hr/updateDept</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DepartmentDelete</servlet-name>
    <url-pattern>/hr/deleteDept</url-pattern>
  </servlet-mapping>
       
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>