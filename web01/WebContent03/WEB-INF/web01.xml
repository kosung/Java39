<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>web01</display-name>
  <filter>
  	<filter-name>CharSetFilter</filter-name>
  	<filter-class>bit.java39.filters.CharSetFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>CharSetFilter</filter-name>
  	<url-pattern>*</url-pattern>
  </filter-mapping>
  
  <listener>
  	<listener-class>bit.java39.listeners.ContextLoaderListener</listener-class>
  </listener>
  
  
  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>bit.java39.servlets.HelloServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>hello2</servlet-name>
    <servlet-class>bit.java39.servlets.HelloServlet2</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>calc</servlet-name>
    <servlet-class>bit.java39.servlets.CalculatorServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>calc2</servlet-name>
    <servlet-class>bit.java39.servlets.CalculatorServlet2</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>calc3</servlet-name>
    <servlet-class>bit.java39.test.CalculatorServlet3</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeList</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeList</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeAdd</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeAdd</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeDetail</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeDetail</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeUpdate</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeUpdate</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>EmployeeDelete</servlet-name>
    <servlet-class>bit.java39.servlets.hr.EmployeeDelete</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>EmployeeList</servlet-name>
    <url-pattern>/hr/searchEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeAdd</servlet-name>
    <url-pattern>/hr/addEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeDetail</servlet-name>
    <url-pattern>/hr/retrieveEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeUpdate</servlet-name>
    <url-pattern>/hr/updateEmp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>EmployeeDelete</servlet-name>
    <url-pattern>/hr/deleteEmp</url-pattern>
  </servlet-mapping>
     
  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/test/hellotest</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>hello2</servlet-name>
    <url-pattern>/test/hellotest2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>calc</servlet-name>
    <url-pattern>/calc</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>calc2</servlet-name>
    <url-pattern>/calc2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>calc3</servlet-name>
    <url-pattern>/calc3</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>